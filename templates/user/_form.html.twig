{{ form_start(form) }}
    <div class="row g-2">
        <div class="col-sm-6">
            {{ form_row(form.firstname) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.lastname) }}
        </div>
    </div>
    
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}

    <div class="text-end">
        <button class="btn btn-primary">{{ button_label }}</button>
    </div>
{{ form_end(form) }}
